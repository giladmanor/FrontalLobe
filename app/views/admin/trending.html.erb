
			
<div id="content" class="span10">
<!-- content starts -->
	<div class="box span12">
		<div class="box-header well" data-original-title="">
			<h2><i class="icon-edit"></i> Trending Topics</h2>
			<div class="box-icon">
				<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
				<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
			</div>
		</div>
	
	
	<%= form_tag("/admin/set_trending", :method => "post") do %>
  
	<fieldset>
	<div class="sortable ui-sortable">
	  <%
	  @trending.each{|t|
	  	%>
	  	
			<label class="checkbox inline" style="width:250px">
				<div class="checker" id="uniform-inlineCheckbox1"><span><input type="checkbox" id="inlineCheckbox1" name="w[]" value="<%=t["name"]%>" style="opacity: 0;" checked></span></div>
				<span class="label"><%=t["name"]%> (<%=t["rank"]%>)</span>
			</label>
		
	  	<%
	  }
	  %>
	  
	</div>
	</fieldset>
		<fieldset>
			<div class="control-group" style="margin-left: 20px;margin-top: 20px;">
				<label class="control-label" for="focusedInput">Add yourself (, seperated)</label>
				<div class="controls">
				  <input name="extra_values" class="input-xlarge focused" id="focusedInput" type="text" value="">
				</div>
			  </div>
			</fieldset>
			
			<div class="control-group" style="margin-left: 20px;margin-top: 20px;">
				<button type="submit" class="btn btn-primary">Save changes</button>		
			</div>
		
		
		
	<% end %>
		
	</div>
	
	


		<!-- content ends -->
</div><!--/#content.span10-->
				
				
		